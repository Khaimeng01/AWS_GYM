       <div  class="form-group row">
         <label for="exampleFormControlSelect1" class="col-sm-2 col-form-label">Upload Image</label>
         <div class="col-sm-10">
          <input asp-for="gymSession_Trainer_Image_URL" type="file" name="imagefile"  class="form-control" id="date" value="@Model.gymSession_Trainer_Image_URL">

          </div>
      </div>*@

  
      @*Submit Button*@
      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
      </div>

    </form>

     <script>
      function toggleFileInput() {
    var checkbox = document.getElementById("editImageCheckbox");
    var fileInput = document.getElementById("gymSession_Trainer_Image_URL");
    var isImageUpdated = document.getElementById("isImageUpdated");
    var previous = document.getElementById("gymSession_Trainer_Prev_Image_URL");
    if (checkbox.checked) {
      fileInput.style.display = "block";
      isImageUpdated.value = true;
      previous=@Model.gymSession_Trainer_Image_S3Key;
    } else {
      fileInput.style.display = "none";
      isImageUpdated.value = false;
    }
  }
    </script>
</div>

