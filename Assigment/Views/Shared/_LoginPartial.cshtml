@using Microsoft.AspNetCore.Identity
@using Assigment.Areas.Identity.Data

@inject SignInManager<AssigmentUser> SignInManager
@inject UserManager<AssigmentUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="GymSession" asp-action="Index">Manage Gym Sessions</a>

    </li>

    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="ManageCustomer" asp-action="Index">Manage Customer</a>

    </li

    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="ManageAdmin" asp-action="Index">Manage Admin</a>

    </li>

      <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="SendEmail" asp-action="Index">Manage Admin 2</a>

    </li>

    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
