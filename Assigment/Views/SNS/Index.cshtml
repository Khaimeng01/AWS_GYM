@{
    ViewData["Title"] = "broadcastMessageForm";
    Layout = "_Layout2";
}
<style>
    .form-container {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 5px;
        padding: 20px;
        margin-bottom: 20px;
    }
</style>

<div class="container form-container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>Broadcast Message </h1>
            <hr>
            <form method="post" asp-action="broadcastMessage" asp-controller="SNS">
                <div class="form-group">
                    <label for="subject">Subject Title</label>
                    <input type="text" name="subject" class="form-control" id="subject" placeholder="e.g. Welcome to FlexZone Fitness!" />
                </div>
                <div class="form-group">
                    <label for="message">Message Body Content</label>
                    <textarea name="Message" class="form-control" id="message" rows="5" cols="90"></textarea>
                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-primary">Broadcast Message!</button>
                </div>
            </form>
        </div>
    </div>
</div>